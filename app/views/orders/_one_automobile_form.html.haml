= fr.hidden_field(:id)
.col-md-12
  .form-group
    = fr.label :automobile_model
    - if @auto_vals
      = fr.text_field :automobile_model, class: 'form-control', value: @auto_vals[:automobile_model]
    - else
      = fr.text_field :automobile_model, class: 'form-control'
    = fr.error_messages_for(:automobile_model)
.col-md-12
  .form-group
    = fr.label :automobile_type
    - if @auto_vals
      = fr.select :automobile_type, options_for_select(Automobile::TYPES,
      @auto_vals[:automobile_type]), {}, {class: 'form-control'}
    - else
      = fr.select :automobile_type, Automobile::TYPES, {}, {class: 'form-control'}
    = fr.error_messages_for(:automobile_type)
